<%- include('header.ejs') %>
<div class="container-fluide bg-light p-3">
        <div class="form-group col-8">
            <input type="search" name="search" class="form-control vol" id="search" placeholder="Rechercher">
            <div class="btn btn-primary"><i class="fa fa-search"></i></div>
        </div>
        <div class="h2 text-center fw-bold border-bottom border-2 pb-1 mb-2" style="min-width: max-content;">Les offre
            d'emplois recente</div>
        <div class="album">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3" id="list-emplois">
                    <% emplois.forEach(emploi => {%>         
                        <div class="col mb-4">
                          <div class="border border-2 border-primary rounded-4 p-1">
                            <div class="d-flex">
                              <div class="p-2 d-flex flex-column">
                                <img src="./asset/img/test.png" class="img-thumbnail" alt="">
                                <span class="fs-6 text-primary">Konbytech</span>
                              </div>
                              <div class="border-start p-2">
                                <div class="h4 fw-semibold"> <a href="/emplois/<%= emploi.id%>" class="link"><%= emploi.titre  %></a></div>
                                <p class="p"><%= emploi.intro %></p>
                    
                              </div>
                            </div>
                          </div>
                        </div>
                        <% }); %>
                </div>
            </div>


        </div>
    </div>
    <%- include('footer.ejs') %>